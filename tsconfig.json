{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "jsx": "react",
        "strict": true,
        "declaration": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
